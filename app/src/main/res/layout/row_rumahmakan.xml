<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="4dp"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/row_tx_tgl_rumahmakan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="08 Dec 2020 18:35"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>

    <TextView
        android:id="@+id/row_tx_nama"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Hamzan"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_tx_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selong"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/row_tx_jenismenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jus"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/row_tx_kontak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="08776343648"
        android:textStyle="italic" />

</LinearLayout>